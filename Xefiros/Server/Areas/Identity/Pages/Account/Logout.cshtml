@page
@using Microsoft.AspNetCore.Routing
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar Sesión";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Cerrar Sesión</button>
            </form>
        }
        else
        {
            <p>Ha salido exitosamente de la aplicación</p>

            <div>
                <a class="btn btn-success" href="~/">Volver a la aplicación</a>
            </div>
        }
    }
</header>