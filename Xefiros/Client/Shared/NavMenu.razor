<Bar
	Mode="BarMode.VerticalInline"
	CollapseMode="BarCollapseMode.Small"
	Breakpoint="Breakpoint.Desktop"
	NavigationBreakpoint="Breakpoint.Tablet"
	Background="@Background.Dark"
	ThemeContrast="ThemeContrast.Dark">
	<BarToggler Mode="@BarTogglerMode.Normal"/>
	<BarBrand>
		<BarItem>
			<BarLink To="/">
				<BarIcon IconName="IconName.Truck"/>
				D. La Caserita
			</BarLink>
		</BarItem>
	</BarBrand>
	<BarMenu>
		<BarStart>
			<BarLabel>Menú</BarLabel>
			<AuthorizeView>
				<Authorized>
					<BarItem>
						<BarLink To="/">
							<BarIcon IconName="IconName.Home"/> Inicio
						</BarLink>
					</BarItem>
					<BarItem>
						<BarLink To="clientes">
							<BarIcon IconName="IconName.UserFriends"></BarIcon> Clientes
						</BarLink>
					</BarItem>
					<BarItem>
						<BarLink To="productos">
							<BarIcon IconName="@("fa-hammer")"></BarIcon> Productos
						</BarLink>
					</BarItem>
					<BarItem>
						<BarLink To="ventas">
							<BarIcon IconName="@IconName.DollarSign"></BarIcon> Ventas
						</BarLink>
					</BarItem>
					<BarItem>
						<BarLink To="usuarios">
							<BarIcon IconName="@("fa-user-cog")"></BarIcon> Usuarios
						</BarLink>
					</BarItem>
				</Authorized>
			</AuthorizeView>
		</BarStart>
	</BarMenu>
</Bar>